@model IEnumerable<FullStackMVC5.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
 <h2>Customers</h2>


@if (!Model.Any())
{
    <text>We don't have customers yet </text>
}
else
{
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="row">Customer</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
}