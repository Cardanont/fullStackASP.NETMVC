@model FullStackMVC5.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Movies.Count == 0)
{
    <text>We don't have movies right now hehe </text>
}
else
{




    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="row">Movies</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var movie in Model.Movies)
                {
                    <tr>
                        <td>@movie.Name</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
}
